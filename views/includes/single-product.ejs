<section id="selling-product">
  <div class="container my-md-5 py-5">
    <div class="row g-md-5">
      <div class="col-lg-6">
        <div class="row">
          <div class="col-md-12">
            <!-- product-large-slider -->
            <div
              class="swiper product-large-slider swiper-fade swiper-initialized swiper-horizontal swiper-watch-progress swiper-backface-hidden productBorda">
              <div class="swiper-wrapper" id="swiper-wrapper-b9f77bfc8d829687" aria-live="polite">
                <div class="swiper-slide swiper-slide-visible swiper-slide-active text-center" role="group"
                  aria-label="1 / 4">
                  <img src="/images/product-<%= jogo.id_jogo %>-1.png" class="img product-img rounded" />
                </div>
                <div class="swiper-slide swiper-slide-next text-center" role="group" aria-label="2 / 4">
                  <img src="/images/product-<%= jogo.id_jogo %>-2.png" class="img product-img rounded" />
                </div>
                <div class="swiper-slide" role="group" aria-label="3 / 4">
                  <img src="/images/product-<%= jogo.id_jogo %>-3.png" class="img product-img rounded" />
                </div>
                <div class="swiper-slide" role="group" aria-label="4 / 4">
                  <img src="/images/product-<%= jogo.id_jogo %>-4.png" class="img product-img rounded" />
                </div>
              </div>
              <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>
          </div>
          <div class="col-md-12 mt-2">
            <!-- product-thumbnail-slider -->
            <div thumbsslider=""
              class="swiper product-thumbnail-slider swiper-initialized swiper-horizontal swiper-free-mode swiper-watch-progress swiper-backface-hidden swiper-thumbs p-2">
              <div class="swiper-wrapper" id="swiper-wrapper-f4f3ae6edda6e024" aria-live="polite"
                style="transform: translate3d(0px, 0px, 0px)">
                <div class="swiper-slide swiper-slide-visible swiper-slide-active swiper-slide-thumb-active
                  role="group" aria-label="1 / 4" style="width: 202.667px; margin-right: 8px">
                  <img src="/images/product-<%= jogo.id_jogo %>-1.png" class="img-fluid rounded productBorda" />
                </div>
                <div class="swiper-slide swiper-slide-visible swiper-slide-next" role="group" aria-label="2 / 4"
                  style="width: 202.667px; margin-right: 8px">
                  <img src="/images/product-<%= jogo.id_jogo %>-2.png" class="img-fluid rounded productBorda" />
                </div>
                <div class="swiper-slide swiper-slide-visible" role="group" aria-label="3 / 4"
                  style="width: 202.667px; margin-right: 8px">
                  <img src="/images/product-<%= jogo.id_jogo %>-3.png" class="img-fluid rounded productBorda" />
                </div>
                <div class="swiper-slide" role="group" aria-label="4 / 4" style="width: 202.667px; margin-right: 8px">
                  <img src="/images/product-<%= jogo.id_jogo %>-4.png" class="img-fluid rounded productBorda" />
                </div>
              </div>
              <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 mt-5">
        <div class="product-info">
          <div class="element-header">
            <h2 itemprop="name" class="display-6 fw-bold">
              <%= jogo.nome %>
            </h2>
            <div class="rating-container d-flex gap-0 align-items-center">
              <span class="rating secondary-font">
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                5.0</span>
            </div>
          </div>
          <div class="product-price pt-3 pb-3">
            <strong class="text-primary display-6 fw-bold">R$ <%= jogo.preco %></strong>
          </div>
          <p class="text-start text-break fw-medium lh-base mb-3">
            <%= jogo.Sobre %>
          </p>
          <hr />
          <div class="cart-wrapper">
            <div class="color-options product-select">
              <div class="color-toggle pt-2" data-option-index="0">
                <h5 class="item-title fw-bold">Categorias:</h5>
                <ul class="select-list list-unstyled d-flex">
                  <% let categoriasArray=jogo.Categorias.split(","); %>
                    <% categoriasArray.forEach(categoria=> { %>
                      <li class="select-item pe-3" data-val="categorias" title="categorias">
                        <a href="#" class="btn btn-light text-uppercase">
                          <%= categoria %>
                        </a>
                      </li>
                      <% }) %>
                </ul>
              </div>
            </div>
            <div class="swatch product-select pt-3" data-option-index="1">
              <h5 class="item-title fw-bold">Plataforma:</h5>
              <ul class="select-list list-unstyled d-flex">
                <% let plataformasArray=jogo.Plataforma.split(","); %>
                  <% plataformasArray.forEach(plataforma=> { %>
                    <li class="select-item pe-3" data-val="plataformas" title="plataformas">
                      <a href="#" class="btn btn-light text-uppercase">
                        <%= plataforma %>
                      </a>
                    </li>
                    <% }) %>
              </ul>
            </div>
            <div class="pt-2">
              <div class="d-flex flex-wrap pt-4">
                <a href="#" class="btn-cart me-3 px-4 pt-3 pb-3">
                  <h5 class="text-uppercase m-0 fw-bold">Comprar</h5>
                </a>
                <a href="javascript:void(0)" class="btn-wishlist px-4 pt-3">
                  <iconify-icon icon="fluent:heart-28-filled" class="fs-5"></iconify-icon>
                </a>
              </div>
            </div>
          </div>
        </div>
        <hr class="mt-4" />
        <div class="meta-product">
          <div class="meta-item d-flex align-items-baseline">
            <h5 class="item-title fw-bold no-margin pe-2">Modo de jogo:</h5>
            <ul class="select-list list-unstyled d-flex">
              <li data-value="S" class="select-item fw-bold">
                <%= jogo.Modo_de_jogo %>
              </li>
            </ul>
          </div>
          <div class="meta-item d-flex align-items-baseline">
            <h5 class="item-title fw-bold no-margin pe-2">Idiomas:</h5>
            <ul class="select-list list-unstyled d-flex">
              <li data-value="S" class="select-item fw-bold">
                <%= jogo.Idioma %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
